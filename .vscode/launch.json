    "version": "0.2.0",
    "configurations": [
        {
            "name": "STM32 Debug",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/stm32f103c6_project.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            
            // УКАЗЫВАЕМ ПУТИ:
